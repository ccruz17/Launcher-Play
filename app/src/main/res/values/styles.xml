<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkSwitch" parent="Material.Widget.Switch">
        <item name="sw_trackColor">@drawable/color_track_dark</item>
        <item name="sw_thumbColor">@drawable/color_thumb_dark</item>
    </style>

    <style name="DarkFlatColorButtonRippleStyle" parent="Material.Drawable.Ripple.Touch">
        <item name="android:background">@null</item>
        <item name="rd_backgroundColor">@color/colorPrimary</item>
        <item name="rd_rippleColor">@color/colorPrimaryDark</item>
        <item name="rd_cornerRadius">4dp</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LightFlatColorButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@null</item>
        <item name="rd_backgroundColor">@color/colorPrimary</item>
        <item name="rd_rippleColor">@color/colorPrimaryDark</item>
        <item name="rd_cornerRadius">4dp</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/Widget.AppCompat.Button</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>